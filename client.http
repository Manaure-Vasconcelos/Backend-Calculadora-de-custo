@base_url = http://localhost:3001/auth
@user_base_url = http://localhost:3001/user
@recipes_base_url = http://localhost:3001/recipes
@ingredients_base_url = http://localhost:3001/ingredients
@authToken = {{signIn.response.body.access_token}}

# @name signIn
POST {{base_url}}/login
Content-Type: application/json

{
  "email": "manaure@gmail.com",
  "password": "Password123@"
}

###

# @name register
POST {{base_url}}/register
Content-Type: application/json

{
  "name": "manaure",
  "email": "manaure@gmail.com",
  "password": "Password123@"
