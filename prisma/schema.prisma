generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  recipes   Recipes[]
}

model Recipes {
  id          Int          @id @default(autoincrement())
  title       String       @unique
  describe    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userId      Int
  ingredients Ingredient[]
  user        User?        @relation(fields: [userId], references: [id])
}

model Ingredient {
  id           Int      @id @default(autoincrement())
  name         String
  marketWeight Decimal  @map("marketWeight")
  marketPrice  Decimal  @map("marketPrice")
  grossWeight  Decimal  @map("grossWeight")
  realAmount   Decimal  @map("realAmount")
  recipeId     Int
  recipes      Recipes? @relation(fields: [recipeId], references: [id])
}
